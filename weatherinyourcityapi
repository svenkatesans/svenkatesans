import requests

#find location by ip
locationUrl = "http://ip-api.com/json"
locationResponse = requests.request("GET", locationUrl)
city = locationResponse.json()['city']
url = "http://api.openweathermap.org/data/2.5/weather"

payload = "appid=8e1cbf5addbd8c6a42ab084217d6354d&units=metric&q="+city
headers = {
    'Accept': "application/json"
    }

response = requests.request("GET", url, params=payload, headers=headers)

weather = response.json()['weather']
temp = response.json()['main']
main = weather[0]['main']
temperature = temp['temp']
print('Weather in Stockholm: ' + main + ' ' + str(temperature) + 'Â°C')
